<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="container" prefHeight="370.0" prefWidth="336.0" spacing="10" stylesheets="@css/styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="tn.devMinds.controllers.AjoutUserController">

    <TextField fx:id="firstNameField" promptText="Prénom" stylesheets="@css/styles.css" />
    <TextField fx:id="lastNameField" promptText="Nom" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="passwordField" promptText="Mot de passe" />
    <ComboBox fx:id="roleComboBox" promptText="Rôle" />
    <Button onAction="#addUser" text="Ajouter" />
</VBox>
