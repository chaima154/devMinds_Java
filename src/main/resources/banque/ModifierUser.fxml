<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="container" alignment="CENTER" hgap="10" stylesheets="@css/styles.css" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="tn.devMinds.controllers.ModifierUserController">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
      <ColumnConstraints />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      <RowConstraints />
    </rowConstraints>

    <Label styleClass="content-label" text="Prénom" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="firstNameField" promptText="Prénom" styleClass="form-container" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label fx:id="firstNameError" styleClass="error" GridPane.columnIndex="2" GridPane.rowIndex="0" />

    <Label styleClass="content-label" text="Nom" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="lastNameField" promptText="Nom" styleClass="form-container" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label fx:id="lastNameError" styleClass="error" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    <Label styleClass="content-label" text="Email" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="emailField" promptText="Email" styleClass="form-container" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label fx:id="emailError" styleClass="error" GridPane.columnIndex="2" GridPane.rowIndex="2" />

    <Label styleClass="content-label" text="Mot de passe" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="passwordField" promptText="Mot de passe" styleClass="form-container" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label fx:id="mdpError" styleClass="error" GridPane.columnIndex="2" GridPane.rowIndex="3" />

    <Label styleClass="content-label" text="Rôle" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <ComboBox fx:id="roleComboBox" promptText="Rôle" styleClass="publication-box" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Button onAction="#handleUpdateUser" text="Update" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5">
      <styleClass>
         <String fx:value="button" />
         <String fx:value="add-button" />
      </styleClass></Button>
</GridPane>
