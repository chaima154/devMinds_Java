<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="container" prefHeight="692.0" prefWidth="866.0" spacing="10" styleClass="main-container" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.devMinds.controllers.ListeUsersController">
    <!-- Header -->
    
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="searchTermField" promptText="Rechercher" styleClass="search-field" />
        <Button onAction="#searchUsers" styleClass="search-button" text="Rechercher" />
        <Button onAction="#openAddUserDialog" styleClass="add-button" text="Ajouter Utilisateur" />
    </HBox>

    <!-- Tableau des utilisateurs -->
    <TableView fx:id="userTableView" styleClass="table-view" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" styleClass="table-column" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="firstNameColumn" prefWidth="100" styleClass="table-column" text="PrÃ©nom">
                <cellValueFactory>
                    <PropertyValueFactory property="prenom" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="lastNameColumn" prefWidth="100" styleClass="table-column" text="Nom">
                <cellValueFactory>
                    <PropertyValueFactory property="nom" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="emailColumn" editable="false" prefWidth="150" styleClass="table-column" text="Email">
                <cellValueFactory>
                    <PropertyValueFactory property="email" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
