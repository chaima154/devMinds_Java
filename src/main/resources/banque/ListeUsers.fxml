<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.devMinds.controllers.ListeUsersController">
    <center>
        <SplitPane dividerPositions="0.08051869722557299">
            <fx:include source="sidebarre_admin.fxml" />

            <VBox fx:id="container" spacing="10" styleClass="main-container">

                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <HBox alignment="CENTER" spacing="10">
                            <TextField fx:id="searchTermField" promptText="Rechercher" styleClass="search-field" />

                            <Button onAction="#openAddUserDialog" styleClass="add-button" text="Ajouter Utilisateur" />
                            <Button text="Télécharger en Excel" styleClass="add-button" onAction="#downloadUsersAsExcel" />

                        </HBox>
                    </children>
                </HBox>
                <TableView fx:id="userTableView" prefWidth="500.0" prefHeight="500.0" styleClass="table-view" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50" styleClass="table-column" text="ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="id" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="firstNameColumn" prefWidth="100" styleClass="table-column" text="Prénom">
                            <cellValueFactory>
                                <PropertyValueFactory property="prenom" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="lastNameColumn" prefWidth="100" styleClass="table-column" text="Nom">
                            <cellValueFactory>
                                <PropertyValueFactory property="nom" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="emailColumn" editable="false" prefWidth="150" styleClass="table-column" text="Email">
                            <cellValueFactory>
                                <PropertyValueFactory property="email" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="actionsColumn" prefWidth="150" styleClass="table-column" text="Actions">

                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>